@model IEnumerable<CrudProjectData.Model.Employee>

@{
    ViewBag.Title = "Index";
}

@section scripts
{
    @Scripts.Render("~/bundles/Content/DataTables/js/datatables")
    @Scripts.Render("~/Scripts/Employee/index.js")
}


@section styles
{
    @Styles.Render("~/bundles/Content/DataTables/css/datatables")
}



<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h4 class="m-0 font-weight-bold text-primary">@Html.ActionLink("Add Employee", "Create")</h4>
    </div>
    <div class="card-body">
        <table id="EmpTable" class="table table-hover table-bordered" width="100%" cellspacing="0">
            <thead class="thead-light">
                <tr>
                    <th style="min-width: 100px;">
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th style="min-width: 100px;">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th style="min-width: 100px;">
                        @Html.DisplayNameFor(model => model.Emp_no)
                    </th>
                    <th style="min-width: 150px;">
                        @Html.DisplayNameFor(model => model.Branch)
                    </th>
                    <th style="min-width: 150px;">
                        @Html.DisplayNameFor(model => model.Department)
                    </th>
                    <th style="min-width: 160px;">
                        @Html.Encode("Action")
                    </th>
                </tr>
            </thead>

        </table>
    </div>
</div>

